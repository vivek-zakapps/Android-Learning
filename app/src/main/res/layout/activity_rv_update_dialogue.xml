<!-- dialog_update_layout.xml -->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="350dp"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:layout_marginHorizontal="20dp"
    android:gravity="center"
    android:background="@drawable/show_dialogue_style"
    android:orientation="vertical"
    android:padding="16dp">

    <!-- Text field -->
    <EditText
        android:id="@+id/editText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/text_field_style"
        android:hint="Enter your update here..." />

    <!-- Buttons -->
    <LinearLayout
        android:id="@+id/btn_liner"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:gravity="fill_horizontal">


        <Button
            android:id="@+id/rv_lv_btnCancel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginEnd="5dp"
            android:background="@drawable/cancel_button_style"
            android:text="Cancel"
            android:textColor="@color/blue" />

        <Button
            android:id="@+id/rv_lv_btnUpdate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:layout_weight="1"
            android:background="@drawable/custom_filed_button_style"
            android:text="Update"
            android:textColor="@color/white" />

    </LinearLayout>

</LinearLayout>
